extends ../layout

block content

  a(href='/bicicletas') Volver

  .divider-custom

  .container
    // Create Section Heading
    h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0 Nueva Bicicleta
    // Icon Divider
    .divider-custom
      .divider-custom-line
      .divider-custom-icon
        i.fas.fa-star
      .divider-custom-line
    // Create Section Form
    .row
      .col-lg-8.mx-auto
        // To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19.
        form#contactForm(name='sentMessage' action='/bicicletas/create' method='post')
          .control-group
            .form-group.controls.mb-0.pb-2
              label ID
              input#name.form-control(name='id' type='text' required='required' data-validation-required-message='Please enter your name.')
              p.help-block.text-danger
          .control-group
            .form-group.controls.mb-0.pb-2
              label Color
              input#email.form-control(name='color' type='text' required='required' data-validation-required-message='Please enter your email address.')
              p.help-block.text-danger
          .control-group
            .form-group.controls.mb-0.pb-2
              label Modelo
              input#phone.form-control(name='modelo' type='text' required='required' data-validation-required-message='Please enter your phone number.')
              p.help-block.text-danger
          .control-group
            .form-group.controls.mb-0.pb-2
              label Latitud
              input#phone.form-control(name='latitud' type='text' required='required' data-validation-required-message='Please enter your phone number.')
              p.help-block.text-danger
          .control-group
            .form-group.controls.mb-0.pb-2
              label Longitud
              input#phone.form-control(name='longitud' type='text' required='required' data-validation-required-message='Please enter your phone number.')
              p.help-block.text-danger
          br
          #success
          .form-group
            button.btn.btn-primary.btn-xl(type='submit') Ok

  