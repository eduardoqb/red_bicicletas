extends ../layout

block content
    
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col') Acciones
                th(scope='col')
                th(scope='col')
        tbody
            each bici in bicis
                tr
                    td(scope='row')=bici.id
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion
                    td
                        a.btn.btn-info(href='bicicletas/' + bici.id + '/show') Ver
                    td
                        a.btn.btn-warning(href='bicicletas/' + bici.id + '/update') Modificar
                    td
                        form.inline(method='post' action='bicicletas/' + bici.id + '/delete')
                            input(type='hidden' name='id' value=bici.id)
                            button.btn.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
                                ='Eliminar'

    a.btn.btn-primary(href='/bicicletas/create') Crear Bicicleta                    
